<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/code"
            style="@style/TextViewStyleItem"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="条码：012190002802"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/goodsClassType"
            style="@style/TextViewStyleItem"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="商品类别：0101371"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price"
            style="@style/TextViewStyleItem"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="单价：￥56.00"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/num"
            style="@style/TextViewStyleItem"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="数量：1"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalPrice"
            style="@style/TextViewStyleItem"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="总价：￥56.00"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/deduction"
            style="@style/TextViewStyleItem"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="扣除积分：500"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>