<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/acceptanceShop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:drawableEnd="@drawable/ic_sr_blue"
            android:gravity="start|center"
            android:paddingStart="@dimen/drawer_margin"
            android:paddingEnd="0dp"
            android:text="@string/InitiatingShop"
            android:textSize="@dimen/drawer_text_size" />

        <Button
            android:id="@+id/acceptanceShopClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="@string/clear" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goodsClassID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:drawableEnd="@drawable/ic_sr_blue"
            android:gravity="start|center"
            android:paddingStart="@dimen/drawer_margin"
            android:paddingEnd="0dp"
            android:text="@string/goodsClassType"
            android:textSize="@dimen/drawer_text_size" />

        <Button
            android:id="@+id/goodsClassIDClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="@string/clear" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:drawableEnd="@drawable/ic_sr_blue"
            android:gravity="start|center"
            android:paddingStart="@dimen/drawer_margin"
            android:paddingEnd="0dp"
            android:text="@string/sIdHid"
            android:textSize="@dimen/drawer_text_size" />

        <Button
            android:id="@+id/sIdClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="@string/clear" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:drawableEnd="@drawable/ic_sr_blue"
            android:gravity="start|center"
            android:paddingStart="@dimen/drawer_margin"
            android:paddingEnd="0dp"
            android:text="@string/goods_code"
            android:textSize="@dimen/drawer_text_size" />

        <Button
            android:id="@+id/codeClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="@string/clear" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goodsID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:drawableEnd="@drawable/ic_sr_blue"
            android:gravity="start|center"
            android:paddingStart="@dimen/drawer_margin"
            android:paddingEnd="0dp"
            android:text="@string/goodsId"
            android:textSize="@dimen/drawer_text_size" />

        <Button
            android:id="@+id/goodsIDClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="@string/clear" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.19"
            android:gravity="start|center"
            android:paddingStart="@dimen/drawer_margin"
            android:paddingEnd="0dp"
            android:text="@string/transferStatus"
            android:textSize="@dimen/drawer_text_size" />

        <RadioGroup
            android:id="@+id/transferStatusChip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.66"
            android:orientation="horizontal"
            android:paddingStart="0dp"
            android:paddingEnd="0dp">

            <RadioButton
                android:id="@+id/transferStatusChip0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="@string/all"
                android:textSize="@dimen/drawer_text_size" />

            <RadioButton
                android:id="@+id/transferStatusChip1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:gravity="start|center"
                android:text="@string/Confirmed"
                android:textSize="@dimen/drawer_text_size" />

            <RadioButton
                android:id="@+id/transferStatusChip2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="start|center"
                android:text="@string/toBeConfirmed"
                android:textSize="@dimen/drawer_text_size" />
        </RadioGroup>

        <Button
            android:id="@+id/transferStatusClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="@string/clear" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="0.19"
            android:gravity="start|center"
            android:paddingStart="@dimen/drawer_margin"
            android:paddingEnd="0dp"
            android:text="@string/transferTime"
            android:textSize="@dimen/drawer_text_size" />

        <TextView
            android:id="@+id/transferTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="0.66"
            android:background="@drawable/shape_rectangle_black"
            android:drawableEnd="@drawable/ic_calendar"
            android:gravity="start|center"
            android:hint="@string/choice_date"
            android:paddingStart="@dimen/drawer_margin"
            android:paddingEnd="@dimen/drawer_margin"
            android:textSize="@dimen/drawer_text_size" />

        <Button
            android:id="@+id/transferTimeClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/reset" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/reset" />

        <Button
            android:id="@+id/query"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.15"
            android:background="@android:color/holo_blue_bright"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/query" />
    </LinearLayout>
</LinearLayout>